<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgTour"
        android:layout_width="@dimen/_200sdp"
        android:layout_gravity="center"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/tour_screen_icon_1"
        android:contentDescription="@string/tour" />


    <com.asaptemp.provider.utils.CustomTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/_0sdp"
        android:letterSpacing="0"
        android:text="@{tour.title}"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_20ssp"
        android:textStyle="normal"
        app:font_name="poppins_bold"/>

    <com.asaptemp.provider.utils.CustomTextView
        android:id="@+id/txtMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/_0sdp"
        android:letterSpacing="0"
        android:text="@{tour.msg}"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_16ssp"
        android:textStyle="normal"
        app:font_name="poppins_regular"/>



</LinearLayout>